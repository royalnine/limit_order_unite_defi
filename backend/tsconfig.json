{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"rootDir": "src",
		"types": ["node"],
		"sourceMap": true,
		"inlineSourceMap": false,
		"inlineSources": true,
		"declaration": true,
		"declarationMap": true,
		"allowJs": true,
		"checkJs": false,
		"allowSyntheticDefaultImports": true
	},
	"ts-node": {
		"transpileOnly": true,
		"experimentalSpecifierResolution": "node"
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
