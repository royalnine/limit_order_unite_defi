{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"rootDir": "src",
		"types": ["node"],
		"sourceMap": true,
		"inlineSourceMap": false,
		"inlineSources": true,
		"declaration": true,
		"declarationMap": true,
		"allowJs": true,
		"checkJs": false
	},
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
